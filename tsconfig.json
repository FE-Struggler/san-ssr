{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "module": "CommonJS",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "san": ["types/san"]
    },
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [ "src" ]
}
